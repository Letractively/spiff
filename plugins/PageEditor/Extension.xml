<?xml version="1.0" ?>
<xml>
  <extension handle="spiff_core_page_editor">
    <name>Page Editor</name>
    <release>0.1</release>
    <description xml:lang="" lang="">
    This core extension implements the user interface for editing
    the properties and layout of a site.
    </description>
    <authors>
      <person>
        <name>Samuel Abels</name>
        <email>spam2, debain, org</email>
      </person>
    </authors>

    <behavior>
      <signal uri="render_start" />
      <signal uri="render_end" />
    </behavior>

    <depends>
      <runtime>spiff</runtime>
      <installtime>spiff</installtime>
    </depends>
  </extension>
</xml>
