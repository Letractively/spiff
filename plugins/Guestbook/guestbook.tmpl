<div class="content"
     xmlns:py="http://genshi.edgewall.org/"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     py:with="img_dir = plugin_dir + '/img'">
  <h1 py:content="guestbook.get_title()" />
  <py:for each="error in errors">
  <font color="red" py:content="error" /><br/>
  </py:for>
  ${guestbook.get_description()}
  <form action="${request_uri()}" method="post">
  <table class="guestbook" width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr py:for="posting in postings">
      <td>${posting.get_title()}</td>
      <td><input type='submit' name="remove" value="${posting.get_id()}" /></td>
    </tr>
  </table>
  </form>
</div>
