<?xml version="1.0" ?>
<xml>
  <extension handle="wishlist">
    <name>Wishlist</name>
    <release>0.1</release>
    <description xml:lang="" lang="">
    Provide a wishlist to your visitors and let them remove the items
    they are planning to buy.
    </description>
    <authors>
      <person>
        <name>Samuel Abels</name>
        <email>spam2, debain, org</email>
      </person>
    </authors>

    <behavior>
      <signal uri="render_start" />
      <signal uri="render_end" />
    </behavior>

    <depends>
      <runtime>spiff</runtime>
      <installtime>spiff</installtime>
    </depends>

    <attributes>
      <attribute name="recursive" type="boolean">False</attribute>
    </attributes>
  </extension>
</xml>
