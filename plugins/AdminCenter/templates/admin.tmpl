<div xmlns:py="http://genshi.edgewall.org/"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     py:with="img_dir = plugin_dir + '/img'"
     py:strip="True">
<div align="center">
  <table width="600">
    <tr>
      <td py:with="url = request_uri('manage_content=1')">
        <xi:include href="icon_with_caption.tmpl"
                    py:with="img     = img_dir + '/logo_medium.png';
                             caption = txt('Change Site Content');
                             url     = url" />
      </td>
      <td py:with="url = request_uri('manage_users=1')">
        <xi:include href="icon_with_caption.tmpl"
                    py:with="img     = img_dir + '/groups.png';
                             caption = txt('User and Group Management');
                             url     = url" />
      </td>
    </tr>
  </table>
</div>
</div>
