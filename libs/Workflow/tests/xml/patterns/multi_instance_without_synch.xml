<?xml version="1.0" encoding="UTF-8"?> 
<process-definition name="flow" revision="1.0">
    <description>
    Pattern 15 (Multiple Instances without Synchronization)
    </description>

    <!-- Start with an implicit simple split. -->
    <startactivity>
        <successor>multi_instance_1</successor>
    </startactivity>

    <!-- Split into 3 branches, and implicitly split twice in addition. -->
    <multiinstance name="multi_instance_1" times="3">
        <successor>activity_g1</successor>
        <successor>activity_g2</successor>
    </multiinstance>

    <!-- Parallel activities. -->
    <activity name="activity_g1">
        <successor>last</successor>
    </activity>
    <activity name="activity_g2">
        <successor>last</successor>
    </activity>

    <!-- A final activity. -->
    <activity name="last">
        <successor>end</successor>
    </activity>
</process-definition>
