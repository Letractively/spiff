<?xml version="1.0" ?>
<xml>
  <package handle="spiff_core_login">
    <name>Login</name>
    <release>0.1</release>
    <description xml:lang="" lang="">
    This core extension implements the login form that lets users log into
    Spiff.
    </description>
    <authors>
      <person>
        <name>Samuel Abels</name>
        <email>spam2, debain, org</email>
      </person>
    </authors>

    <behavior>
      <signal uri="login_done" />
      <signal uri="logout_done" />
      <signal uri="render_start" />
      <signal uri="render_end" />
      <listen uri="spiff:page_open" />
    </behavior>

    <depends>
      <runtime>spiff</runtime>
      <installtime>spiff</installtime>
    </depends>
  </package>
</xml>
