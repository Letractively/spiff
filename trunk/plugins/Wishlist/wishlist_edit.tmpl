<div class="content"
     xmlns:py="http://genshi.edgewall.org/"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     py:with="img_dir = plugin_dir + '/img'">
  <h1 py:content="wishlist.get_title()" />
  <py:for each="error in errors">
  <font color="red" py:content="error" /><br/>
  </py:for>
  ${wishlist.get_description()}
  <form action="${request_uri()}" method="post">
  <table class="wishlist" width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr py:for="wish in wishes">
      <td><input type="text"
                 name="title[${wish.get_id()}]"
                 value="${wish.get_title()}" /></td>
      <td><input type="submit"
                 name="remove"
                 value="${wish.get_id()}" /></td>
      <td><input type="submit"
                 name="save"
                 value="${wish.get_id()}" /></td>
    </tr>
    <tr>
      <td><input type="text" name="title" /></td>
      <td></td>
      <td><input type="submit" name="add" value="Add" /></td>
    </tr>
  </table>
  </form>
</div>

