<?xml version="1.0" encoding="UTF-8"?> 
<process-definition name="flow" revision="1.0">
    <description>Pattern 3 (Synchronization)</description>

    <!-- Start with an implicit simple split. -->
    <startactivity>
        <successor>first</successor>
    </startactivity>
    
    <activity name="first">
        <successor>activity_f1</successor>
        <successor>activity_f2</successor>
        <successor>activity_f3</successor>
    </activity>

    <!-- Implicit split. -->
    <activity name="activity_f1">
        <successor>join</successor>
    </activity>
    <activity name="activity_f2">
        <successor>join</successor>
    </activity>
    <activity name="activity_f3">
        <successor>join</successor>
    </activity>

    <!-- A final activity. -->
    <join name="join">
        <successor>end</successor>
    </join>
</process-definition>
