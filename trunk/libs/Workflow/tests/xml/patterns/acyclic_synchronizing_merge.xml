<?xml version="1.0" encoding="UTF-8"?> 
<process-definition name="flow" revision="1.0">
    <description>Pattern 37 (Acyclic Synchronizing Merge)</description>

    <startactivity>
        <successor>first</successor>
    </startactivity>
    
    <!-- Start with an implicit simple split. -->
    <activity name="first">
        <successor>activity_f1</successor>
        <successor>activity_f2</successor>
        <successor>activity_f3</successor>
    </activity>

    <!-- Implicit split. -->
    <activity name="activity_f1">
        <successor>join</successor>
    </activity>
    <activity name="activity_f2">
        <successor>join</successor>
    </activity>
    <activity name="activity_f3">
        <successor>excl_choice_1</successor>
    </activity>

    <!-- Choose the a path to a stubactivity. -->
    <exclusivechoice name="excl_choice_1">
        <default-successor>activity_g1</default-successor>
        <conditional-successor>
            <equals left-value="1" right-value="1" />
            <successor>activity_g2</successor>
        </conditional-successor>
    </exclusivechoice>

    <activity name="activity_g1">
        <successor>join</successor>
    </activity>

    <activity name="activity_g2">
        <successor>foo</successor>
    </activity>
    <stubactivity name="foo" />

    <!-- Structured synchronizing merge. -->
    <join name="join" context="first">
        <successor>end</successor>
    </join>
</process-definition>
