<?xml version="1.0" encoding="UTF-8"?> 
<process-definition name="flow" revision="1.6">
    <description>Pattern 9 (Structured Discriminator)</description>

    <!-- Start with an implicit simple split. -->
    <startactivity>
        <successor>multi_choice_1</successor>
    </startactivity>

    <!-- Split branches using a multi-choice. -->
    <multichoice name="multi_choice_1">
        <conditional-successor>
            <equals left-field="test_attribute1" right-field="test_attribute1" />
            <successor>activity_a1</successor>
        </conditional-successor>
        <conditional-successor>
            <equals left-field="test_attribute1" right-field="test_attribute2" />
            <successor>activity_a2</successor>
        </conditional-successor>
        <conditional-successor>
            <equals left-field="test_attribute2" right-field="test_attribute2" />
            <successor>activity_a3</successor>
        </conditional-successor>
    </multichoice>

    <!-- Conditional branches. -->
    <activity name="activity_a1">
        <successor>discriminator</successor>
    </activity>
    <activity name="activity_a2">
        <successor>discriminator</successor>
    </activity>
    <activity name="activity_a3">
        <successor>discriminator</successor>
    </activity>

    <!-- Structured discriminator. -->
    <discriminator name="discriminator" context="multi_choice_1">
        <successor>last</successor>
    </discriminator>

    <!-- A final activity. -->
    <activity name="last">
        <successor>end</successor>
    </activity>
</process-definition>
